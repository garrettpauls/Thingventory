<ContentDialog
  x:Class="Thingventory.Views.Dialogs.ValidationErrorDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Thingventory.Views.Dialogs"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:results="using:FluentValidation.Results"
  mc:Ignorable="d"
  Title="Validation errors"
  PrimaryButtonText="OK">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <TextBlock Text="{x:Bind Message}" TextWrapping="Wrap" />
    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
      <ItemsControl ItemsSource="{x:Bind Result.Errors}">
        <ItemsControl.ItemTemplate>
          <DataTemplate x:DataType="results:ValidationFailure">
            <TextBlock Text="{x:Bind ErrorMessage}" TextWrapping="Wrap" Margin="4" />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Grid>
</ContentDialog>
